<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Dark theme overlay for dialogs -->
    <style name="ThemeOverlay.AppCompat.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="android:background">@color/dark_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!-- Custom dark dialog theme -->
    <style name="CustomDarkDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/dark_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <!-- Custom dialog button style -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/dark_secondary</item>
    </style>
</resources>